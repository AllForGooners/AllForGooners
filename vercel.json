{
  "builds": [
    {
      "src": "api/scrape.py",
      "use": "@vercel/python",
      "config": { "maxLambdaSize": "15mb" }
    }
  ],
  "routes": [
    {
      "src": "/api/scrape",
      "dest": "/api/scrape"
    },
    {
      "src": "/(.*)",
      "dest": "/frontend/$1"
    }
  ],
  "crons": [
    {
      "path": "/api/scrape",
      "schedule": "0 0 * * *"
    }
  ]
} 